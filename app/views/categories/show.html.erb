<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>



<%= form_with(model: [@category, Product.new], local: true) do |form| %>
   <%= form.hidden_field :category_id, value: @category.id %>
 

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :movie_name %>
  </div>

  <div class="field">
<%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<table>
<thead>
<tr>
<th>Nombre</th>
<th>Precio</th>
</tr>
</thead>

 <tbody>
    <% @category.product.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
       </tr>
      <%= link_to 'borrar', category_product_path(@category, product), method: :delete, data: { confirm: 'Are you sure?' } %> 
    <% end %>
  </tbody>
</table>


